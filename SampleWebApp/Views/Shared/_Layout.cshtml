<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - My ASP.NET Application</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<table>
					<tr>
						<td>
							<a href='@Url.Action("LandingPage", "Master")'>
								<img src='@Url.Content("~/Content/Images/FourWallsLogo.png")' width="50" height="35" />
							</a>
							&nbsp;&nbsp;
						</td>
						<td>
							<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
							
							@Html.ActionLink("Insurance One", "LandingPage", "Master", new { area = "" }, new { @class = "navbar-brand", id = "mainMenuOnLayoutPageLink" })
							&nbsp;&nbsp;
							@Html.ActionLink("Sign Out", "SignOut", "SignIn", new { area = "" }, new { @class = "navbar-brand", id = "signOutLink" })
						</td>
						</tr>
					</table>
			</div>
		</div>
	</div>
	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - Four Walls Inc.</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
